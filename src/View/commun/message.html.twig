<div class="container">

	{% if message.message == 'userConnected' %}
	<div class="row pt-5">
		<div class="alert alert-{{message.type}} alert-dismissible fade show " role="alert">
			<h4 class="alert-heading">Bravo !</h4>
			Vous êtes connecté en tant qu'utilisateur.
			<button type="button" class="close" data-dismiss="alert" name="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</div>
	{% endif %}

	{% if message.message == 'adminConnected' %}
	<div class="row pt-5">
		<div class="alert alert-{{message.type}} alert-dismissible fade show " role="alert">
			<h4 class="alert-heading">Bravo !</h4>
			Vous êtes connecté en tant qu'administrateur.
			<button type="button" class="close" data-dismiss="alert" name="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</div>
	{% endif %}
</div>